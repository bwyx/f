{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "app",
    "allowJs": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "app": ["index"]
    }
  },
  "includes": ["app", "test"]
}
