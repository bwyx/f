{
  "name": "f",
  "version": "0.0.1",
  "description": "f",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf {dist,release}/*",
    "dev": "npm run clean && NODE_ENV=development NODE_PATH=dist/app tsc-watch --onSuccess \"node dist/app/server.js\"",
    "build": "npm run clean && NODE_ENV=production tsc --outDir release --baseUrl app ./app/*.ts ./app/**/*.ts",
    "test": "npm run clean && NODE_PATH=dist tsc-watch --onSuccess ava"
  },
  "author": "Bayu Kurnia",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "env-schema": "^3.5.2",
    "fastify": "^3.27.4",
    "fastify-autoload": "^3.11.0",
    "fastify-sensible": "^3.1.2"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/node": "^17.0.21",
    "ava": "^4.1.0",
    "tsc-watch": "^4.6.2",
    "typescript": "^4.6.2"
  },
  "ava": {
    "files": [
      "test/**/*.test.ts"
    ],
    "verbose": true,
    "typescript": {
      "rewritePaths": {
        "./": "dist/"
      },
      "compile": false
    }
  }
}
